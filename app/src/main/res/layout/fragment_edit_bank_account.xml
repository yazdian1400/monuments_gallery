<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".EditBankAccountFragment">

    <com.google.android.material.textfield.TextInputEditText
        style="@style/style_edit_text_in_edit_profile"
        android:id="@+id/et_account_number"
        android:hint="account number" />
    <com.google.android.material.textfield.TextInputEditText
        style="@style/style_edit_text_in_edit_profile"
        android:id="@+id/et_card_number"
        android:hint="card number"
        android:inputType="number"/>
    <com.google.android.material.textfield.TextInputEditText
        style="@style/style_edit_text_in_edit_profile"
        android:id="@+id/et_sheba_number"
        android:hint="sheba number" />
    <com.google.android.material.button.MaterialButton
        style="@style/style_button_in_profile"
        android:id="@+id/btn_save_bank_account"
        android:text="save"/>
</LinearLayout>